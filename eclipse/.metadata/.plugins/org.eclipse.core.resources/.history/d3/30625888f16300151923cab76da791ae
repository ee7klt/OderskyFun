package week1

object assignment1 {
  println("Welcome to the Scala worksheet")       //> Welcome to the Scala worksheet

  def pascal(c: Int, r: Int): Int = {
  
  if (c <= r)  {
    if (c == 0 && r == 0) 1 else {
        if (c == 0) 1 else {
        	if (r == 0) 0 else {
        	  pascal(c - 1, r - 1) + pascal(c, r - 1)
        	  }
        	}
    }
  } else {println("column cannot be greater than row")}
  }                                               //> pascal: (c: Int, r: Int)Int

  pascal(2, 3)                                    //> java.lang.RuntimeException: column cannot be greater than row
