package week1

object assignment1 {
  println("Welcome to the Scala worksheet")

  def pascal(c: Int, r: Int): Int = {
    if (c == 0 && r == 0) 1 else {
      for (col <- 0 to 1) {
        if (col == 0 || col == c) 1 else {pascal(c - 1, r - 1) + pascal(c, r - 1)}
      }
    }
  }

  pascal(0, 0)
}