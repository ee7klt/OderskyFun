  def pascal(c: Int, r: Int): Int = {
  		if (c == 0 && r == 0) 1 else pascal(c-1,r-1) + pascal(c,r-1)
  }                                               //> pascal: (c: Int, r: Int)Int
  
  
  pascal(1,1)                                     //> java.lang.StackOverflowError
